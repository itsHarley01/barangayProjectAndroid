<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:background="@color/lightBlue"
            android:layout_height="50dp">

            <Button
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/back_vector"
                />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Contact Us"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/all_rounded_bg">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/location_vector"/>

                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/i1"
                    android:padding="10dp"
                    android:text="Address"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/r1"
                android:id="@+id/r2"
                android:layout_margin="20dp"
                android:background="@drawable/all_rounded_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/email_vector"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/i2"
                    android:padding="10dp"
                    android:id="@+id/emailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="email"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/r2"
                android:id="@+id/r3"
                android:layout_margin="20dp"
                android:background="@drawable/all_rounded_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/phone_vector"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/i3"
                    android:padding="10dp"
                    android:id="@+id/contactTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="contact"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/r3"
                android:id="@+id/r4"
                android:layout_margin="20dp"
                android:background="@drawable/all_rounded_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/i4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/facebook_vector"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/i4"
                    android:padding="10dp"
                    android:id="@+id/fbTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="fb"/>


            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>